<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyotobytes.shelterfinder101">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/shelter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/shelter"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShelterFinder101">
        <activity android:name=".AddNewShelter"></activity>
        <activity android:name=".OpenMap" />
        <activity android:name=".ShelterDetails" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>